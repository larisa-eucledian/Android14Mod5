            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etExample"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioGroup
            android:id="@+id/rgExample"
            app:layout_constraintTop_toBottomOf="@id/cbExample"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbA"
                android:text="Opc A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/rbB"
                android:text="Opc B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RadioGroup>

        <Spinner
            android:id="@+id/spExample"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/rgExample"
            android:layout_width="300dp"
            android:layout_height="wrap_content"/>

        <ScrollView
            app:layout_constraintTop_toBottomOf="@id/spExample"
            app:layout_constraintBottom_toTopOf="@id/btnExample"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <TextView
